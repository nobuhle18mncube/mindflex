<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    tools:context=".noteeditor">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!-- Note Title -->
        <EditText
            android:id="@+id/etNoteTitle"
            android:hint="@string/note_title"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textCapSentences"
            android:layout_marginBottom="8dp" />

        <!-- Formatting Toolbar -->
        <LinearLayout
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp">

            <ImageButton
                android:id="@+id/btnBold"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:contentDescription="@string/bold"
                android:src="@drawable/ic_format_bold" />

            <ImageButton
                android:id="@+id/btnAttachImage"
                android:src="@drawable/ic_image"
                android:contentDescription="@string/attach_image"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:layout_width="48dp"
                android:layout_height="48dp" />

            <ImageButton
                android:id="@+id/btnAttachchecklist"
                android:src="@drawable/ic_checklist"
                android:contentDescription="@string/attach_image"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:layout_width="48dp"
                android:layout_height="48dp" />

        </LinearLayout>

        <!-- Note Content -->

        <!-- Convert to Task Button -->

        <EditText
            android:id="@+id/etNoteContent"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:gravity="top"
            android:hint="@string/start_writing_your_note"
            android:inputType="textMultiLine"
            android:padding="12dp"
            android:textSize="16sp" />

        <Button
            android:id="@+id/btnConvertToTask"
            android:text="@string/convert_to_task_set_reminder"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:backgroundTint="#6C63FF"
            android:textColor="#FFFFFF" />

        <!-- Save Button -->
        <Button
            android:id="@+id/btnSave"
            android:text="@string/save_note"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:backgroundTint="#4CAF50"
            android:textColor="#FFFFFF" />

    </LinearLayout>
</ScrollView>