<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/dashboard_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

  <!-- Top toolbar -->
  <androidx.appcompat.widget.Toolbar
      android:id="@+id/toolbar"
      android:layout_width="match_parent"
      android:layout_height="?attr/actionBarSize"
      android:background="@android:color/transparent"
      app:navigationIcon="@drawable/ic_arrow_back"
      app:title=""
      app:popupTheme="@style/ThemeOverlay.AppCompat.Light" />

  <!-- Scrollable content -->
  <androidx.core.widget.NestedScrollView
      android:id="@+id/scroll"
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:layout_marginBottom="80dp"
      android:clipToPadding="false"
      android:paddingStart="20dp"
      android:paddingEnd="20dp"
      android:fillViewport="true"
      app:layout_behavior="@string/appbar_scrolling_view_behavior">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

      <!-- Welcome title -->
      <TextView
          android:id="@+id/tvWelcome"
          android:layout_width="0dp"
          android:layout_height="wrap_content"
          android:text="Welcome"
          android:textSize="44sp"
          android:textStyle="bold"
          android:gravity="center"
          android:textColor="@color/black"
          android:fontFamily="sans-serif-medium"
          android:layout_marginTop="24dp"
          app:layout_constraintTop_toTopOf="parent"
          app:layout_constraintStart_toStartOf="parent"
          app:layout_constraintEnd_toEndOf="parent" />

      <!-- Hero image card -->
      <com.google.android.material.card.MaterialCardView
          android:id="@+id/heroCard"
          android:layout_width="0dp"
          android:layout_height="160dp"
          android:layout_marginTop="20dp"
          app:cardCornerRadius="16dp"
          app:cardElevation="2dp"
          app:strokeWidth="0dp"
          app:layout_constraintTop_toBottomOf="@id/tvWelcome"
          app:layout_constraintStart_toStartOf="parent"
          app:layout_constraintEnd_toEndOf="parent">

        <ImageView
            android:id="@+id/heroImage"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:contentDescription="@string/hero_image"
            android:scaleType="centerCrop"
            android:src="@drawable/mindflex" />
      </com.google.android.material.card.MaterialCardView>

      <!-- Checklist card -->
      <com.google.android.material.card.MaterialCardView
          android:id="@+id/cardStartJourney"
          android:layout_width="0dp"
          android:layout_height="88dp"
          android:layout_marginTop="20dp"
          app:cardCornerRadius="12dp"
          app:cardElevation="1dp"
          app:layout_constraintTop_toBottomOf="@id/heroCard"
          app:layout_constraintStart_toStartOf="parent"
          app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:orientation="vertical"
            android:paddingStart="16dp"
            android:paddingEnd="16dp">

          <TextView
              android:id="@+id/tvReadNew"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:clickable="true"
              android:focusable="true"
              android:foreground="?attr/selectableItemBackground"
              android:minHeight="48dp"
              android:padding="8dp"
              android:text="Read News"
              android:textColor="@color/black"
              android:textSize="18sp"
              android:textStyle="bold" />

          <TextView
              android:id="@+id/tvStartSubtitle"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:paddingTop="4dp"
              android:text="Stay updated by whats happening around the world"
              android:textColor="@color/gray"
              android:textSize="14sp" />

          <TextView
              android:id="@+id/tvNewsSnippet"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:text="Loading news..."
              android:textColor="@color/black"
              android:textSize="14sp"
              android:paddingTop="4dp"/>

        </LinearLayout>
      </com.google.android.material.card.MaterialCardView>

      <!-- New notes card -->
      <com.google.android.material.card.MaterialCardView
          android:id="@+id/cardDaily"
          android:layout_width="0dp"
          android:layout_height="88dp"
          android:layout_marginTop="14dp"
          app:cardCornerRadius="12dp"
          app:cardElevation="1dp"
          app:layout_constraintTop_toBottomOf="@id/cardStartJourney"
          app:layout_constraintStart_toStartOf="parent"
          app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:orientation="vertical"
            android:paddingStart="16dp"
            android:paddingEnd="16dp">

          <TextView
              android:id="@+id/tvPlayQuizzes"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:clickable="true"
              android:focusable="true"
              android:foreground="?attr/selectableItemBackground"
              android:minHeight="48dp"
              android:padding="8dp"
              android:text=" Take a quizzes"
              android:textColor="@color/black"
              android:textSize="18sp"
              android:textStyle="bold" />


          <TextView
              android:id="@+id/tvDailySubtitle"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:paddingTop="4dp"
              android:text="Clear you mind by taking a quize"
              android:textColor="@color/gray"
              android:textSize="14sp" />
        </LinearLayout>
      </com.google.android.material.card.MaterialCardView>

    </androidx.constraintlayout.widget.ConstraintLayout>
  </androidx.core.widget.NestedScrollView>

  <!-- Bottom navigation -->
  <com.google.android.material.bottomnavigation.BottomNavigationView
      android:id="@+id/bottomNav"
      android:layout_width="match_parent"
      android:layout_height="72dp"
      android:layout_gravity="bottom"
      android:background="@color/white"
      app:itemIconSize="28dp"
      app:itemIconTint="@color/bottom_nav_selector"
      app:itemTextColor="@color/bottom_nav_selector"
      app:menu="@menu/bottom_nav_menu"
      app:labelVisibilityMode="labeled"
      android:elevation="6dp" />

</androidx.coordinatorlayout.widget.CoordinatorLayout>
